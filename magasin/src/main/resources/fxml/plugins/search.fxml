<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="156.0" prefWidth="1000.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.polytech.si3.ihm.controllers.SearchController">
   <children>
      <HBox alignment="CENTER" prefHeight="37.0" prefWidth="427.0" spacing="50.0">
         <children>
            <Label text="Type :" />
            <CheckBox fx:id="dvdCheckBox" mnemonicParsing="false" text="DVD" />
            <CheckBox fx:id="cdCheckBox" mnemonicParsing="false" text="CD" />
            <CheckBox fx:id="bookCheckBox" mnemonicParsing="false" text="Livre" />
            <CheckBox fx:id="stageCheckBox" mnemonicParsing="false" text="Stage" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="37.0" prefWidth="427.0" spacing="50.0">
         <children>
            <Label text="Prix :" />
            <TextField prefHeight="25.0" prefWidth="73.0" promptText="Minimum" text="0" />
            <TextField prefHeight="25.0" prefWidth="73.0" promptText="Maximum" text="1000" />
         </children>
      </HBox>
      <Button mnemonicParsing="false" onMouseClicked="#onSearchButtonClicked" prefHeight="46.0" prefWidth="152.0" text="Rechercher" />
   </children>
</VBox>
