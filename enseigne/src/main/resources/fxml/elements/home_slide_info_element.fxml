<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<VBox maxWidth="220" maxHeight="300" prefWidth="220.0" prefHeight="300" minWidth="220" minHeight="300" spacing="12" alignment="CENTER"
      fx:controller="fr.polytech.si3.ihm.controller.elements.InfoSliderController" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0"/>
    </padding>
    <BorderPane maxHeight="160" maxWidth="160" prefHeight="160" prefWidth="160" minHeight="160" minWidth="160">
        <center>
            <ImageView fx:id="image" preserveRatio="true" fitHeight="160.0" fitWidth="160.0" pickOnBounds="true"/>
        </center>
    </BorderPane>
    <Text fx:id="titre" styleClass="infoTitle"/>
    <Text fx:id="description" styleClass="infoDescr" wrappingWidth="160"/>
</VBox>