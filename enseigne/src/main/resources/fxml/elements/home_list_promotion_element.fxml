<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="275.0" prefWidth="220.0" spacing="6"
      fx:controller="fr.polytech.si3.ihm.controller.PromotionController" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ImageView fx:id="image" fitHeight="160.0" fitWidth="220.0" pickOnBounds="true" preserveRatio="true" />
        <Text style="-fx-backgrund-color: YELLOW;" text="PROMO" stroke="RED">
            <font>
                <Font name="System Bold" size="21.0" />
            </font>
        </Text>
        <Text fx:id="offre" />
        <Text fx:id="marque" />
        <Text fx:id="produit" />
    </children>
    <padding>
        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
    </padding>
</VBox>