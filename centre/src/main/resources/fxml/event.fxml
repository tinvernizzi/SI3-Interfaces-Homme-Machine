<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<HBox alignment="CENTER_LEFT" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.111"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.polytech.si3.ihm.event.Controller">
    <children>
        <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" prefHeight="250.0" prefWidth="300.0">
            <children>
                <ImageView fx:id="image" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"/>
                <Label fx:id="title" text="Label"/>
            </children>
        </VBox>
        <HBox alignment="CENTER_LEFT" prefWidth="600.0">
            <children>
                <VBox alignment="CENTER_LEFT">
                    <children>
                        <Label fx:id="description" text="Label"/>
                        <Button fx:id="button" onAction="#toEvenement" mnemonicParsing="false" text="Vers l'évènement" style="-fx-background-color: #000000;" textFill="WHITE"/>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</HBox>